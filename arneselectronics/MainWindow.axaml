<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="arneselectronics.MainWindow"
        Title="arneselectronics">

    <TabControl>
        <StackPanel>
            <Grid RowDefinitions="Auto" ColumnDefinitions="*,*,Auto">
                <!-- Add Image control for Logo -->
                <Image HorizontalAlignment="Left" Grid.Column="0" x:Name="LogoImage" Width="200" Height="100" Margin="10"/>
    
                <!-- Cart logo on the right -->
                <Image Grid.Column="1" HorizontalAlignment="Right" x:Name="CartLogo" Width="50" Height="50" Margin="10"/>
    
                <!-- TextBlock for the total in the middle column -->
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2" Text="Total:" FontSize="14"/>
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Text="Antal varer:" FontSize="14"/>
            </Grid>

            
            <!-- Tab Items grid -->
            <Grid Margin="10" RowDefinitions="Auto" ColumnDefinitions="Auto, Auto, Auto, Auto, Auto, *" ShowGridLines="True">
                <TabItem Grid.Column="0" Header="Stationære" />
                <TabItem Grid.Column="1" Header="Bærbare" />
                <TabItem Grid.Column="2" Header="Hardware" />
                <TabItem Grid.Column="3" Header="Tilbehør" />
                <TabItem Grid.Column="4" Header="Viden" />
                <TextBox Grid.Column="5" Height="0" Watermark="Søg..."/>
            </Grid>
        </StackPanel>
    </TabControl>
</Window>