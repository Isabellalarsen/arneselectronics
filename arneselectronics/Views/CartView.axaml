<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="arneselectronics.Views.CartView"
    x:DataType="viewModels:CartViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:arneselectronics"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:arneselectronics.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Spacing="10">

            
            <ItemsControl ItemsSource="{Binding CartList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
                            <StackPanel>
                                <Image Height="100" Width="100" Source="{Binding ProductImage}" />
                                <TextBlock FontSize="16" FontWeight="Bold" Foreground="Black" Text="{Binding Name}" />
                                <TextBlock FontSize="16" FontWeight="Bold" Foreground="Black" 
                                           Text="{Binding Price, StringFormat=C}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        
    </StackPanel>
</UserControl>
