<Window
    Icon=""
    Title="arneselectronics"
    d:DesignHeight="1050"
    d:DesignWidth="1400"
    mc:Ignorable=""
    x:Class="arneselectronics.MainView"
    x:DataType="vm:MainViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:arneselectronics.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>
    <!--  This lets us see the preview of our program  -->

    <StackPanel>
        <Grid
            ColumnDefinitions="Auto,*,Auto"
            RowDefinitions="Auto, Auto"
            ShowGridLines="True">

            <!--  Homepage logo and button  -->
            <Button
                Background="Transparent"
                Command="{Binding GoToHomeCommand}"
                Grid.Column="0"
                Grid.Row="0"
                Height="200"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="200">
                <Button.Content>
                    <StackPanel Margin="10">
                        <Image Source="avares://arneselectronics/Assets/logoimage.png" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  Search button  -->
            <TextBox
                BorderThickness="2"
                FontSize="30"
                FontWeight="DemiBold"
                Grid.Column="1"
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Watermark="Search..." />

            <!--  Cart logo on the right  -->
            <Button
                Background="Transparent"
                Command="{Binding GoToCartCommand}"
                Grid.Column="2"
                Grid.Row="0"
                Height="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="80">
                <Button.Content>
                    <StackPanel>
                        <Image Source="avares://arneselectronics/Assets/carticon.jpg" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  TextBlock for the total in the middle column  -->
            <StackPanel
                Grid.Column="2"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Margin="10"
                VerticalAlignment="Center">
                <TextBlock
                    FontSize="14"
                    Height="15"
                    Name="Total"
                    Text="Total:" />
                <TextBlock
                    Height="15"
                    Name="Quantity"
                    Text="Antal varer:" />
            </StackPanel>
        </Grid>

        <Grid ColumnDefinitions="*,*,*,*,*,*">
            <!-- <Button Command="{Binding GoToHomeCommand}" Grid.Column="0">Homepage</Button> -->
            <Button Command="{Binding GoToHardwareCommand}" Grid.Column="1">Hardware</Button>
            <Button Command="{Binding GoToDesktopCommand}" Grid.Column="2">Desktop</Button>
            <Button Command="{Binding GoToAccessoriesCommand}" Grid.Column="3">Accessories</Button>
            <Button Command="{Binding GoToResourceCommand}" Grid.Column="4">Resource</Button>
            <Button Command="{Binding GoToLaptopCommand}" Grid.Column="5">Laptop</Button>
        </Grid>



        <ContentControl Content="{Binding CurrentPage}" />
    </StackPanel>

</Window>

