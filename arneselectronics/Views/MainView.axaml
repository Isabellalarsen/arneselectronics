<Window
    Title="arneselectronics"
    d:DesignHeight=""
    d:DesignWidth=""
    mc:Ignorable=""
    x:Class="arneselectronics.MainView"
    x:DataType="vm:MainViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:arneselectronics"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:arneselectronics.Views"
    xmlns:vm="clr-namespace:arneselectronics.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>
    <!--  This lets us see the preview of our program  -->

    <StackPanel>
        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto, Auto">
            <!--  Add Image control for Logo  -->
            <Button
                Background="Transparent"
                Command="{Binding GoToHomeCommand}"
                Grid.Column="0"
                Height="200"
                HorizontalAlignment="Left"
                Margin="10"
                Width="200">
                <Button.Content>
                    <StackPanel>
                        <Image Source="avares://arneselectronics/Assets/testbillede1.jpg" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  Cart logo on the right  -->
            <Button
                Background="Transparent"
                Command="{Binding GoToCartCommand}"
                Grid.Column="1"
                Height="60"
                HorizontalAlignment="Right"
                Width="50">
                <Button.Content>
                    <StackPanel>
                        <Image Source="avares://arneselectronics/Assets/carticon.jpg" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid> 
        <!--  TextBlock for the total in the middle column  -->
        <StackPanel
            Grid.Column="2"
            HorizontalAlignment="Right"
            Margin="10"
            VerticalAlignment="Center">
            <TextBlock
                FontSize="14"
                Height="15"
                Name="Total"
                Text="Total:" />
            <TextBlock
                Height="15"
                Name="Quantity"
                Text="Antal varer:" />
        </StackPanel>
        
        <Grid ColumnDefinitions="*,*,*,*,*,*">
            <Button Command="{Binding GoToHardwareCommand}" Grid.Column="1">Hardware</Button>
            <Button Command="{Binding GoToDesktopCommand}" Grid.Column="2">Desktop</Button>
            <Button Command="{Binding GoToAccessoriesCommand}" Grid.Column="3">Accessories</Button>
            <Button Command="{Binding GoToResourceCommand}" Grid.Column="4">Resource</Button>
            <Button Command="{Binding GoToLaptopCommand}" Grid.Column="5">Laptop</Button>
        </Grid>

        <ContentControl Content="{Binding CurrentPage}" />
    </StackPanel>

</Window>

