<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:arneselectronics.ViewModels"
             x:Class="arneselectronics.Views.ProductDetailPageView"
             x:DataType="vm:ProductDetailPageViewModel">
  
    <StackPanel>
        <TextBlock Text="{Binding Product.Name, FallbackValue='Produktnavn ikke fundet'}"/>
        <TextBlock Text="{Binding Product.Price}"></TextBlock>
        <Image Source="{Binding Product.ProductImage}"></Image>
        
    </StackPanel>

</UserControl>