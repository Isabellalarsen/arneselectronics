<UserControl
    Background="PapayaWhip"
    x:Class="arneselectronics.Views.ProductDetailPageView"
    x:DataType="vm:ProductDetailPageViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:vm="clr-namespace:arneselectronics.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>

        <Grid
            ColumnDefinitions="Auto,*,*"
            RowDefinitions="*,*,*"
            ShowGridLines="True">
            <Image
                Grid.Column="0"
                Grid.Row="0"
                Height="300"
                Source="{Binding CurrentProduct.ProductImage}"
                Width="225" />
            <TextBlock
                FontSize="30"
                FontWeight="Medium"
                Grid.Column="1"
                Grid.Row="0"
                HorizontalAlignment="Center"
                Text="{Binding CurrentProduct.Name, FallbackValue='Produktnavn ikke fundet'}"
                VerticalAlignment="Top" />
            <TextBlock
                FontSize="20"
                FontWeight="Medium"
                Grid.Column="1"
                Grid.Row="0"
                HorizontalAlignment="Center"
                Text="{Binding CurrentProduct.Price, StringFormat='Price {0}'}"
                VerticalAlignment="Center" />

            <TextBlock
                FontSize="22"
                FontWeight="Regular"
                Grid.Column="2"
                Grid.Row="0"
                HorizontalAlignment="Left">
                <Run Text="Description:" />
                <LineBreak />
                <Run Text="{Binding CurrentProduct.DescriptionPath}" />
            </TextBlock>

            <Button
                Background="AliceBlue"
                BorderThickness="3"
                Focusable="True"
                FontSize="18"
                FontWeight="Bold"
                Grid.Column="2"
                Grid.Row="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom">
                Add to Cart
            </Button>
        </Grid>
    </StackPanel>
</UserControl>